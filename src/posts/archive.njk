---
layout: default
pagination:
    data: categories
    size: 1
    alias: c
permalink: "/c/{{c.key}}/"
eleventyComputed:
    title: "{{c.title}}" # for meta tags
    desc: "{{ c.desc | striptags }}" # for meta tags
---

<div class="feed | h-feed">
    <header>
        <h1 class="p-name">{{c.title}}</h1>
        <p class="p-summary">{{c.desc | safe}}</p>
        <p>
            <svg role="none" viewBox="0 0 24 24" class="icon" width="24" height="24">
                <use href="/assets/icons/icon-rss.svg#sprite"/>
            </svg>
            Subscribe via <a href="/feeds/{{c.key}}.xml">RSS</a> or <a href="/feeds/{{c.key}}.json">JSON</a> feed
        </p>
        <link href="{{- page.url -}}" class="u-url" />
        <data class="p-author" value="Binyamin Green"></data>
    </header>

    {% for post in collections[c.key] | reverse %}
    <article class="h-entry" aria-labelledby="post--{{post.data.title|slugify}}">
        <a href="{{post.url}}" class="u-url u-uid">
            <h2 class="p-name" id="post--{{post.data.title|slugify}}">{{post.data.title}}</h2>
        </a>
        <p>Posted on <time class="dt-published" datetime="{{post.date| date('iso') }}">{{ post.date | date_est(false) }}</time></p>
        <p class="p-summary">{{ post.data.desc | safe }}</p>
    </article>
    {% endfor %}
</div>
